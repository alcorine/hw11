// MINI RESET
h3
  margin 0
ul
  margin 0
  padding 0
li
  list-style none
a
  text-decoration none
*
  box-sizing border-box

p
  margin 0

button
  margin 0
  padding 0

//MIXIN
border-radius()
  -webkit-border-radius arguments
  -moz-border-radius arguments
  border-radius arguments

content-center(size)
  margin 0 auto
  width size






//PROJECT
body
  font 16px lato sans-serif


.header
  background #000
  height 50px
  position relative

  .logo
    margin 15px 0 0 30px
    float left
    display block


.new-designing
  display block
  position relative
  background #ea3264
  float right
  margin 5px 30px 0 20px
  padding 10px 10px 10px 50px
  overflow hidden
  border-radius(4px)
  height 40px
  font 16px 'Miriad Pro', sans-serif
  color #fff
  img
    background #ed5a82
    position absolute
    left 0
    top 0

.header-nav
  float right
  line-height 50px
  li
    font 16px 'Miriad Pro', sans-serif
    color #fff
    display inline-block
    padding 0 10px
    &:last-child
      border-left 1px solid #fff
      position relative
      &:after
        content: "";
        position: absolute;
        top: 40%;
        margin: 0 0 0 5px;
        width: 0;
        height: 0;
        border-style: solid;
        border-width: 8px 8px 0 8px;
        border-color: #ffffff transparent transparent transparent;

    a
      font 16px 'Miriad Pro', sans-serif
      color #fff




